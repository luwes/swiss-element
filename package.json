{
  "name": "swiss",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "run-s build:*",
    "build:swiss": "yarn workspace swiss build",
    "build:public": "cp -R packages/swiss/dist public",
    "coverage": "codecov",
    "dev": "cross-env NODE_ENV=dev run-p dev:*",
    "dev:swiss": "yarn workspace swiss dev",
    "lint": "eslint packages/*/src",
    "test": "cross-env COVERAGE=true karma start"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@webcomponents/custom-elements": "^1.4.1",
    "ansi-colors": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.7.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.2",
    "faucet": "^0.0.1",
    "fs-extra": "^9.0.0",
    "ispy": "^0.1.2",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.3",
    "karma-sauce-launcher": "^1",
    "karma-tap": "^4.2.0",
    "karma-tap-pretty-reporter": "^4.2.0",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.7.2",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-sourcemaps": "^0.6.1",
    "rollup-plugin-terser": "^5.3.0",
    "tap-spec": "^5.0.0",
    "tape-browser": "^4.13.0"
  }
}
